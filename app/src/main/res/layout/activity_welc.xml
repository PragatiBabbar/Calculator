<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welc"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/lly"
    android:background="@drawable/c_background">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:id="@+id/rrr"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/response_box"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="30dp"

        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:gravity="end"
        android:paddingEnd="10dp" />

    <TextView
        android:id="@+id/answer_box"
        android:layout_width="370dp"
        android:layout_height="110dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/response_box"
        android:textSize="40dp"

        android:textAlignment="textEnd"
        android:paddingRight="10dp"

        android:gravity="end"
        android:layout_marginStart="12dp" />


</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rrr"
        android:gravity="center"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/simpleSwitch"
        android:layout_marginStart="10dp"
        android:shadowColor="@color/colorPrimary"
        android:layout_above="@+id/all_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />


    <Button
        android:id="@+id/all_clear"

        android:layout_width="89dp"
        android:layout_height="80dp"

        android:text="C"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"

        android:textSize="40dp"

        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/go_back"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:elevation="7dp"
        android:drawableLeft="@drawable/gobackk"
        android:background="@drawable/e_try_backgrund"

        android:layout_toRightOf="@+id/all_clear"

        android:paddingLeft="25dp"

        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/gobackk"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/modulus"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_height="80dp"

        android:layout_toRightOf="@+id/go_back"
        android:text="%"
        android:textSize="40dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/division"
        android:layout_marginLeft="35dp"
        android:layout_width="89dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_height="80dp"

        android:layout_toRightOf="@+id/modulus"
        android:text="/"
        android:textSize="40dp"

        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/seven"

        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/all_clear"
        android:text="7"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:textSize="40dp"

        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/eight"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_below="@+id/go_back"
        android:layout_toRightOf="@+id/all_clear"
        android:text="8"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/nine"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_below="@+id/modulus"
        android:layout_toRightOf="@+id/go_back"
        android:text="9"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/multiplication"
        android:layout_marginLeft="35dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/division"
        android:layout_toRightOf="@+id/modulus"
        android:text="*"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/four"

        android:layout_width="89dp"
        android:layout_height="80dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_below="@+id/seven"
        android:text="4"
        android:textSize="40dp"

        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/five"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/eight"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"

        android:layout_toRightOf="@+id/all_clear"
        android:text="5"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/six"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/nine"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_toRightOf="@+id/go_back"
        android:text="6"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/minus"
        android:layout_marginLeft="35dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/multiplication"
        android:layout_toRightOf="@+id/modulus"
        android:text="-"
        android:textSize="40dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"

        android:layout_marginTop="5dp"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/one"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/four"
        android:text="1"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:textSize="40dp"

        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/two"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/five"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_toRightOf="@+id/all_clear"
        android:text="2"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/three"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/six"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:layout_toRightOf="@+id/go_back"
        android:text="3"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/plus"
        android:layout_marginLeft="35dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/minus"

        android:layout_toRightOf="@+id/modulus"
        android:text="+"
        android:textSize="40dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"

        android:layout_marginTop="5dp"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/brkt1"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/one"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:text="("
        android:textStyle="bold"
        android:textSize="30dp"
        android:paddingLeft="25dp"

        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/zero"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/all_clear"
        android:text="0"

        android:textSize="40dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"

        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/brkt2"
        android:layout_marginLeft="10dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/three"
        android:layout_toRightOf="@+id/go_back"
        android:text=")"
        android:textSize="40dp"
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/decimal"
        android:layout_marginLeft="35dp"
        android:layout_width="89dp"
        android:layout_height="80dp"
        android:layout_below="@+id/plus"
        android:layout_toRightOf="@+id/modulus"
        android:text="."
        android:elevation="7dp"
        android:background="@drawable/e_try_backgrund"
        android:textSize="40dp"

        android:layout_marginTop="5dp"
        android:layout_marginStart="35dp" />
        <Button
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:elevation="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/e_try_backgrund"
            android:textSize="40dp"
            android:gravity="center"
            android:text="="
            android:layout_below="@+id/decimal"
            android:id="@+id/equal_to"/>

</RelativeLayout>
</RelativeLayout>